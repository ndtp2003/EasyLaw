# Development Environment Configuration
# Copy this file to .env.dev and fill in your actual values

# App Configuration
APP_NAME=EasyLaw
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# Server Configuration
HOST=127.0.0.1
PORT=8000
RELOAD=true

# Database Configuration - FILL THIS WITH YOUR MONGODB ATLAS CONNECTION STRING
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=easylaw_dev

# Milvus Configuration - FILL THIS WITH YOUR ZILLIZ CLOUD DETAILS
MILVUS_URI=https://your-cluster-endpoint.zillizcloud.com
MILVUS_USER=your-username
MILVUS_PASSWORD=your-password
MILVUS_DB_NAME=easylaw_dev

# AI Configuration - FILL THIS WITH YOUR GEMINI API KEY
GEMINI_API_KEY=AIza...your-gemini-api-key-here
EMBEDDING_MODEL=models/embedding-001
LLM_MODEL=gemini-1.5-pro
MAX_TOKENS=4096
TEMPERATURE=0.7

# Authentication - FILL THIS WITH A STRONG RANDOM SECRET
JWT_SECRET=your-super-secret-jwt-key-for-development-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Admin Configuration - FILL THIS WITH YOUR EMAIL
ADMIN_EMAIL=admin@yourdomain.com

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_FOLDER=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Chat Configuration
MAX_ACTIVE_SESSIONS=3
CHAT_HISTORY_LIMIT=50
CONTEXT_WINDOW_SIZE=4000
